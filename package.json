        "http-server": "^0.10.0",
        "jquery": "^3.2.1",
        "js-yaml": "^3.8.4",
        "knockout": "^3.4.2",
        "less": "^2.7.2",
        "less-loader": "^4.0.3",
        "markdown-it": "^8.3.1",
        "markdown-it-abbr": "^1.0.4",
